<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.materialdesignstudy.paletter.PaletteActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/id_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:title="HLQ-BLOG" />

        <ImageView
            android:id="@+id/id_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/id_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="darkMutedColor" />

        <TextView
            android:id="@+id/id_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="lightMutedColor" />

        <TextView
            android:id="@+id/id_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="darkVibrantColor" />

        <TextView
            android:id="@+id/id_title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="lightVibrantColor" />

        <TextView
            android:id="@+id/id_title4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="mutedColor" />

        <TextView
            android:id="@+id/id_title5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="谷歌提供推荐颜色 rgb" />

        <TextView
            android:id="@+id/id_title6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="titleColor" />

        <TextView
            android:id="@+id/id_title7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="半透明颜色" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/id_image_test1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/love" />

            <TextView
                android:id="@+id/id_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:padding="15dp"
                android:text="是是非非，不过尔尔" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/id_image_test2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/loves" />

            <TextView
                android:id="@+id/id_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:padding="15dp"
                android:text="愿老有所依，身边有你" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_yz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_yz"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/youzheng" />

            <TextView
                android:id="@+id/tv_yz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="我是邮政卡"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_zs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_zs"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/zhaoshang" />

            <TextView
                android:id="@+id/tv_zs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="我是招商卡"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_bank"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon2" />

            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="我是XXX卡"
                android:textColor="#fff" />

        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>

</ScrollView>